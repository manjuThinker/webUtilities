@Test
void testMapToCombinedData() {
    // Input TxnSummary
    TxnSummaryResponse.TxnSummary txnSummary = new TxnSummaryResponse.TxnSummary();
    txnSummary.setDealReferenceNo(new TXCustomerReference("DEAL123"));
    txnSummary.setCounterPartyDealRefNo(new TXCustomerReference("COUNTERPARTY123"));
    txnSummary.setCustomerName(new TXCustomerReference("John Doe"));
    txnSummary.setLastModifiedDate(new TXCustomerReference("2023-10-01T12:00:00Z"));
    txnSummary.setExpiryDate(new TXCustomerReference("2023-12-31"));
    txnSummary.setTransactionDate(new TXCustomerReference("2023-09-01T12:00:00Z"));
    txnSummary.setAttachmentCount(new TXCustomerReference(BigDecimal.ONE));
    txnSummary.setDtpcustomerID(new TXDTPcustomerID("CUST123"));
    txnSummary.setCountryCode(new TXCustomerReference(TXCountryCode.US));
    txnSummary.setStepNo(new TXCustomerReference("1"));
    txnSummary.setStep(new TXCustomerReference(new TXStep("STEP_CODE")));

    // Call the method
    CombinedInProgressData result = scelcMapper.mapToCombinedData(txnSummary);

    // Assertions
    assertNotNull(result);
    assertEquals("DEAL123", result.getBankRef());
    assertEquals("COUNTERPARTY123", result.getBeneficiaryName());
    assertEquals("John Doe", result.getApplicantName());
    assertTrue(result.isHasAttachment());
    assertEquals("CUST123", result.getDtpCustomerId());
    assertEquals("US", result.getCountryCode());
    assertEquals("1", result.getStepNo());
    assertEquals("STEP_CODE", result.getStepCode());
}
