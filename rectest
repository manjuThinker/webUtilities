@Test
void testCreateTXELCInProgressRequest() {
    // Input data
    Map<String, String> customerCountryMap = new HashMap<>();
    customerCountryMap.put("CUST123", "US");
    customerCountryMap.put("CUST456", "GB");

    // Call the method
    TXELCInProgressRequest request = scelcMapper.createTXELCInProgressRequest(customerCountryMap);

    // Assertions
    assertNotNull(request);
    assertEquals("ELC", request.getProductCode());
    assertEquals(2, request.getScbCustomerDetails().size());

    // Verify first customer details
    TXELCInProgressRequest.SCBCustomerDtls firstCustomer = request.getScbCustomerDetails().get(0);
    assertEquals("CUST123", firstCustomer.getCustomerId());
    assertEquals(TXCountry.of(TXCountryCode.US), firstCustomer.getCountryCode());
    assertEquals("SC", firstCustomer.getInstitution());
    assertEquals("CUST123", firstCustomer.getDtpCustomerId());

    // Verify second customer details
    TXELCInProgressRequest.SCBCustomerDtls secondCustomer = request.getScbCustomerDetails().get(1);
    assertEquals("CUST456", secondCustomer.getCustomerId());
    assertEquals(TXCountry.of(TXCountryCode.GB), secondCustomer.getCountryCode());
}
